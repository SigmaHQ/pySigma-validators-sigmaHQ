{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "title": { "type": "string" },
        "version": { "type": "string" },
        "pattern": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "logsource":{
                        "type":"object",
                        "properties": {
                            "product": {
                                "type": ["string", "null"] 
                            },
                            "category": {
                                "type": ["string", "null"] 
                            },
                            "service": {
                                "type": ["string", "null"] 
                            },
                            "definition": {
                                "type": ["string", "null"] 
                            }
                        },
                        "required": ["product","category","service","definition"]
                    },
                    "prefix":{
                        "type": "string"
                    }
                },
                "required": ["logsource","prefix"]
            }
        }
    },
    "required": ["title","version","pattern"]
}

